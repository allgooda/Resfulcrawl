<!DOCTYPE html>
<html>
  <$- include('../partials/head.ejs') $>
<body class="index-body">
  <$- include('../partials/navbar.ejs', {subHeading: 'Welcome'}) $>
<main id="main-content">
<!-- search bar implmentation -->
<br>
<br>
<div class="col-xs-12 col-md text-center venue-search-bar">
  <form method="GET" action="/venues">
    <input class="form-control" Style="width: 250px" id="place" type="text" name="name" placeholder="ex: Los Angeles, CA"/>
    <div class="dropdown">
      <select name="radius">
        <option value="8000">5 Miles</option>
        <option value="16000">10 Miles</option>
        <option value="24000">15 Miles</option>
        <option value="32000">20 Miles</option>
        <option value="40000">25 Miles</option>
      </select>
    </div>
    <button id="btnSearch" class="btn btn-md center-block search-create-btn" Style="width: 100px" OnClick="btnSearch_Click">Search</button>
  </form>
</div>

  <!-- display each restaurants nearby user input area -->
    <div class="col-xs-6 col-md-9" id="indexRow">
      <$ venues.forEach(function(venue) { $>
        <div class="venuelist">
          <img class="venue-thumb" src="<$= venue.image_url $>" alt="">
          <input type="button" value="Add" class="AddVenue" id="buttonAddVenue">
          <h4 class="venue-name"><a href="<$= venue.url $>"><$= venue.name $></a></h4>
          <img class="venue-rating" src="<$= venue.rating_img_url $>" alt="Link"> <$= venue.review_count $> reviews
          <p class="venue-category"><$= venue.categories $></p>
          <p class="venue-address"><$- venue.location.display_address.join('<br>') $></p>
          <p class="venue-phone"><$- venue.phone $></p>
          <img class="venue-snippet-image" src="<$- venue.snippet_image_url $>" alt="">
          <p class="venue-snippet-text"><$- venue.snippet_text $></p>
          <div class="venue-snippet-border"></div>
        </div>
      <$ }); $>
    </div>

 <!-- fixed sidebar implementation css added for #sidebar -->
<div id="sidebar" class="col-md-3 text-center">

  <h3 class="form-signin-heading">Create A Crawl</h3>

    <br>
    <div class="input-group">
      <span class="input-group-addon" >Start Date</span>
      <input type="date" class="form-control" aria-describedby="basic-addon1" id="startDate">
    </div>
    <br>

    <div class="input-group">
      <span class="input-group-addon" >Title</span>
      <input type="text" id="title" class="form-control" placeholder="Name Your Crawl" aria-describedby="basic-addon1">
    </div>
    <br>

    <div class="form-group">
      <textarea rows="4" class="form-control" id="description" placeholder="Description of your crawl..."></textarea>
    </div>

    <button type="submit" id= "createCrawl" class="btn btn-lg create-create-btn">CREATE CRAWL</button>
    <br>
    <br>


</div>
</main>

<section id="showbody"></section>

  <$- include('../partials/scripts.ejs') $>
  <$- include('../templates/crawlShow.html') $>
</body>
</html>
